################################################
## GENERAL SETTINGS
################################################

shared_writable_dirs:
	- /manifest/cache
	- /manifest/logs
	- /manifest/tmp
	- /workspace/uploads


################################################
## WEB SPECIFIC SETTINGS
################################################

document_root: /
index_list: [index.html, index.php]
default_gateway: index.php
error_pages:
	403: /forbidden/
	404: /page-not-found/


################################################
## PHP SPECIFIC SETTINGS
################################################

php_extensions:
	- curl
	- dom
	- mysql
	- xml
	- xsl
	- zip
php_date_timezone: America/Vancouver
